{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/product.schema.json",
    "title": "Air Quality",
    "description": "Air quality per country",
    "type": "object",
    "properties": {
        "country-name": {
            "description": "The country the air quality belongs to",
            "type": "string"
        },
        "polutant": {
            "description": "The name of the polutant",
            "type": "string"
        },
        "variable": {
            "description": "Contributor to the polutant",
            "type": "string"
        },
        "year": {
            "description": "The year the air quality was measured",
            "type": "number",
            "minLength": 4,
            "maxLength": 4
        },
        "unit": {
            "description": "The units of the air quailty",
            "type": "string"
        },
        "value": {
            "description": "The actual air quality",
            "type": "number",
            "exclusiveMinimum": 0
        }
    },
    "required": ["country-name", "polutant", "variable", "year", "unit", "value"]
}