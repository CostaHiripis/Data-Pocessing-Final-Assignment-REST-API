{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/air-quality.schema.json",
    "title": "Energy",
    "description": "Energy with lots of values",
    "type": "object",
    "properties":{
        "energy": {
            "type": "array",
            "items": { "$ref": "#/definitions/energyObject" }
        }
    },
    "required": ["energy"],
    "definitions": {
        "energyObject": {
            "type": "object",
            "properties": {
                "country": {
                "type": "object",
                    "properties": {
                        "countryName": {
                            "description": "The country the air quality belongs to",
                            "type": "string"
                        },
                        "countryCode": {
                            "description": "The name of the polutant",
                            "type": "string",
                            "pattern": "^[A-Z]{3}$"
                        },
                        "year": {
                            "description": "The year the air quality was measured",
                            "type": "string",
                            "pattern": "^[0-9]{4}$"
                        },
                        "energyConsumption": {
                            "description": "The actual air quality",
                            "type": "number",
                            "exclusiveMinimum": 0
                        }
                    },
                    "required": ["countryName", "countryCode", "year", "energyConsumption"]
                }
            },
            "required": ["country"]
        }
            
        
    }    
}