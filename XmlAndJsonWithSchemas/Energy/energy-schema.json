{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/product.schema.json",
    "title": "Energy Consuption",
    "description": "Energy consuption per country",
    "type": "object",
    "properties":{
        "country-name": {
            "description": "The country the energy consumption belongs to",
            "type": "string"
        },
        "country-code": {
            "description": "A three letter code all in caps refering to a country",
            "type": "string",
            "pattern": "[A-Z][A-Z][A-Z]"
        },
        "year": {
            "description": "The year the energy consumption reading was taken",
            "type": "number",
            "minLength": 4,
            "maxLength": 4
        },
        "energy-consumption": {
            "description": "The actual value of the energy consumption",
            "type": "number",
            "exclusiveMinimum": 0
        }
    },
    "required": ["country-name", "country-code", "year", "energy-consumption"]
}