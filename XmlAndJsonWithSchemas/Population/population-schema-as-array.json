{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/product.schema.json",
    "title": "Population",
    "description": "Popluation per country",
    "type": "object",
    "properties": {
        "population-per-country": {
            "type": "array",
            "items": { "$ref": "#/definitions/population-per-country" }
        }
    },
    "definitions": {
        "population-per-country": {
            "type": "object",
            "required": ["country-name", "year", "count"],
            "properties": {
                "country-name": {
                    "description": "The country the popluation belongs to",
                    "type": "string"
                },
                "year": {
                    "description": "The year the reading was taken",
                    "type": "number",
                    "minLength": 4,
                    "maxLength": 4
                },
                "count": {
                    "description": "The actual popluation",
                    "type": "integer"
                }
            }
        }
    }   
}